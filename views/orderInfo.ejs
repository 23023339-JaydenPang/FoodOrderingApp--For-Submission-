<!-- order.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Food Ordering App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Food Ordering App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/orderInfo">Add new order</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Order Details</h2></div>
        <br>
        <% if (order) { %> <!-- Check if order data exists -->
            <div>
                <p><b>Customer Name:</b><br> <%= order.customerName %></p>
                <p><b>Order Image:</b><br> <img src = "/images/<%= order.image %>" width="20%"></p>
                <p><b>Food Description:</b><br> <%= order.foodDescription %></p>
                <p><b>Comments:</b><br> <%= order.comments %></p>
                <p><b>Price:</b><br> $<%= order.price.toFixed(2) %></p> 
            </div>
        <% } else { %>
            <p>No order found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
